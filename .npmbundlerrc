{
  "sources": ["src", "assets"],
  "exclude": {
    "*": ["**/rollup.config.js"],
    "billboard.js@1.10.2": ["src/plugin/Plugin.js"]
  },
  "rules": [
    {
      "test": "\\.scss$",
      "exclude": "node_modules",
      "use": ["sass-loader", "style-loader"]
    },
    {
      "test": "^assets/",
      "exclude": "node_modules",
      "use": ["copy-loader"]
    },
    {
      "test": "\\.js$",
      "exclude": "node_modules",
      "use": [
        {
          "loader": "babel-loader",
          "options": {
            "presets": ["env", "react"]
          }
        }
      ]
    },
    {
      "test": "\\.css$",
      "include": "node_modules",
      "use": ["style-loader"]
    },
    {
      "test": "\\.json$",
      "exclude": "node_modules",
      "use": ["json-loader"]
    }
  ],
  "create-jar": {
    "output-dir": "dist",
    "features": {
      "js-extender": true,
      "web-context": "/liferay-js-toolkit-showcase"
    }
  },
  "dump-report": true
}
